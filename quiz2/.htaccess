<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /itws2110-courteneysit/quiz2/
    
    # If the request is for a directory and there's no trailing slash, add it
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(.*[^/])$ $1/ [L,R=301]
    
    # If accessing the root directory, redirect to home.php
    RewriteCond %{REQUEST_URI} ^/itws2110-courteneysit/quiz2/?$
    RewriteRule ^(.*)$ home.php [L]
</IfModule>
